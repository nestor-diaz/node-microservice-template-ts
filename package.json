{
  "name": "microservice-template-ts",
  "version": "1.0.0",
  "description": "NodeJS + TypeScript microservice template",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -s clean:dist build start:simple",
    "start:simple": "node .",
    "start:dev": "npm-run-all -s build -p watch:*",
    "build": "npm-run-all -s build:deps build:ts",
    "build:deps": "sh ./scripts/build.sh",
    "build:ts": "tsc",
    "test": "jest",
    "clean:dist": "rimraf dist",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon --inspect --delay 2.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "Nestor Diaz",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "typedi": "^0.8.0"
  }
}
